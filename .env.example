# Solace Broker Configuration
SOLACE_URL=ws://localhost:8008
SOLACE_VPN_NAME=default
SOLACE_USERNAME=admin
SOLACE_PASSWORD=admin

# Topic subscriptions (comma-separated)
# '>' captures all topics, or use specific patterns like 'app/>,orders/*'
SOLACE_TOPIC_SUBSCRIPTIONS=>

# Solace connection settings
SOLACE_CONNECT_RETRIES=3
SOLACE_RECONNECT_RETRIES=-1
SOLACE_RECONNECT_WAIT_MS=3000
SOLACE_KEEPALIVE_INTERVAL_MS=3000
SOLACE_KEEPALIVE_LIMIT=10
SOLACE_SUBSCRIBE_TIMEOUT_MS=10000

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_NAME=solace-topic-metrics
ELASTICSEARCH_TLS_VERIFY=false

# Batching settings
ELASTICSEARCH_BATCH_SIZE=100
ELASTICSEARCH_FLUSH_INTERVAL_MS=5000

# Index settings
ELASTICSEARCH_SHARDS=1
ELASTICSEARCH_REPLICAS=0
ELASTICSEARCH_REFRESH_INTERVAL=5s

# Optional: ILM policy for automatic data retention
ELASTICSEARCH_ILM_POLICY=
